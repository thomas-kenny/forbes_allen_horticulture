<div class="banner">
  <h1>Projects</h1>
</div>

<div class="index-cards">
  <% @projects.each_with_index do |project, index|%>
    <%= link_to project_path(project), class: "card-link project-#{index}" do  %>
      <div class="card-project">
        <%= image_tag project.image, alt: "alttext" %>
        <div class="card-project-infos">
          <div>
            <h2><%= project.name  %></h2>
            <p><%= project.project_type %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
